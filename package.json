{
    "name": "phenomenon-react-ts-template",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "engines": {
        "node": ">=16.0.0",
        "yarn": "please-use-npm",
        "npm": ">=7.10.0"
    },
    "scripts": {
        "dev": "vite --open --host",
        "build": "tsc && vite build",
        "preview": "vite preview --open --host",
        "lint:eslint": "eslint --cache --max-warnings 0 --report-unused-disable-directives \"src/**/*.{js,jsx,ts,tsx}\"",
        "lint:stylelint": "stylelint --cache -q \"**/*.css\"",
        "lint:prettier": "prettier --check \"**/*.{js,ts,tsx,jsx,json,html,css,cjs}\"",
        "lint:prettier:fix": "prettier --write \"**/*.{js,ts,tsx,jsx,json,html,css,cjs}\"",
        "lint": "npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
        "prepare": "husky install"
    },
    "dependencies": {
        "@xobotyi/scrollbar-width": "^1.9.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.3.0",
        "smoothscroll-polyfill": "^0.4.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.6",
        "@commitlint/config-conventional": "^17.6.6",
        "@types/react": "^18.2.14",
        "@types/react-dom": "^18.2.6",
        "@types/smoothscroll-polyfill": "^0.3.1",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
        "@typescript-eslint/parser": "^5.60.0",
        "@vitejs/plugin-react": "^4.0.1",
        "autoprefixer": "^10.4.14",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^8.0.3",
        "postcss": "^8.4.24",
        "prettier": "^2.8.8",
        "rollup-plugin-visualizer": "^5.9.2",
        "stylelint": "^15.9.0",
        "stylelint-config-standard": "^33.0.0",
        "tailwindcss": "^3.3.2",
        "typescript": "^5.0.4",
        "vite": "^4.3.9",
        "vite-plugin-eslint": "^1.8.1"
    }
}
