{
    "name": "phenomenon-react-ts-template",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --open --host",
        "build": "tsc && vite build",
        "preview": "vite preview --open --host",
        "test": "vitest --run --reporter verbose",
        "test:watch": "vitest --reporter verbose",
        "lint:eslint": "eslint --cache --max-warnings 0 --report-unused-disable-directives \"src/**/*.{js,jsx,ts,tsx}\"",
        "lint:stylelint": "stylelint --cache -q \"**/*.css\"",
        "lint:prettier": "prettier --check \"**/*.{js,ts,tsx,jsx,json,html,css,cjs}\"",
        "lint:prettier:fix": "prettier --write \"**/*.{js,ts,tsx,jsx,json,html,css,cjs}\"",
        "lint": "npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
        "sb": "storybook dev -p 6006",
        "build-sb": "tsc && storybook build",
        "prepare": "husky install"
    },
    "dependencies": {
        "@tanstack/react-query": "^4.29.12",
        "@tanstack/react-query-devtools": "^4.29.12",
        "@xobotyi/scrollbar-width": "^1.9.5",
        "axios": "^1.4.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.12.1",
        "smoothscroll-polyfill": "^0.4.4",
        "zustand": "^4.3.8"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.5",
        "@commitlint/config-conventional": "^17.6.5",
        "@tanstack/eslint-plugin-query": "^4.29.9",
        "@types/react": "^18.0.37",
        "@types/react-dom": "^18.0.11",
        "@types/smoothscroll-polyfill": "^0.3.1",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "@typescript-eslint/parser": "^5.59.11",
        "@vitejs/plugin-react": "^4.0.0",
        "autoprefixer": "^10.4.14",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.3.4",
        "husky": "^8.0.3",
        "jsdom": "^22.1.0",
        "postcss": "^8.4.24",
        "prettier": "^2.8.8",
        "prop-types": "^15.8.1",
        "rollup-plugin-visualizer": "^5.9.2",
        "stylelint": "^15.7.0",
        "stylelint-config-standard": "^33.0.0",
        "tailwind-gradient-mask-image": "^1.0.0",
        "tailwindcss": "^3.3.2",
        "typescript": "^5.0.2",
        "vite": "^4.3.9",
        "vite-plugin-eslint": "^1.8.1",
        "vitest": "^0.32.0"
    }
}
